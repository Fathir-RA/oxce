<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.ocxe.Controller.LihatTiketController" prefHeight="500.0" prefWidth="700.0">
    
    <!-- Tabel untuk menampilkan tiket -->
    <TableView fx:id="tiketTable" layoutX="50.0" layoutY="50.0" prefWidth="600.0" prefHeight="300.0">
        <columns>
            <TableColumn text="ID Tiket" fx:id="idTiketColumn" prefWidth="100.0" />
            <TableColumn text="Tanggal" fx:id="tanggalColumn" prefWidth="150.0" />
            <TableColumn text="Destinasi" fx:id="idDestinasiColumn" prefWidth="150.0" />
            <TableColumn text="Waktu" fx:id="waktuColumn" prefWidth="100.0" />
            <TableColumn text="Quantity" fx:id="quantityColumn" prefWidth="100.0" />
            <TableColumn text="Harga" fx:id="hargaColumn" prefWidth="100.0" />
            <TableColumn text="Total Harga" fx:id="totalHargaColumn" prefWidth="100.0" />
        </columns>
    </TableView>

    <!-- Tombol Kembali -->
    <Button text="Kembali" fx:id="kembaliButton" layoutX="50.0" layoutY="400.0" onAction="#handleKembaliAction"/>
    
</AnchorPane>
