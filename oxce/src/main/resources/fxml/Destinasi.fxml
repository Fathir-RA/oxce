            <HBox alignment="CENTER_RIGHT" prefHeight="83.0" prefWidth="505.0" spacing="10.0" stylesheets="@../css/Navbar.css" HBox.hgrow="ALWAYS">
                <Button fx:id="btnBeranda" alignment="CENTER_LEFT" onAction="#handleBerandaAction" prefHeight="50.0" prefWidth="120.0" styleClass="nav-button" text="Beranda">
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="27.0" pickOnBounds="true">
                            <image>
                                <Image url="@../images/Home.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="btnLihatTiket" alignment="CENTER_LEFT" onAction="#handleLihatTiketAction" prefHeight="50.0" prefWidth="130.0" styleClass="nav-button" text="Lihat Tiket">
                    <graphic>
                        <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/tiket.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="btnDestinasi" alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="120.0" styleClass="nav-button" text="Destinasi">
                    <graphic>
                        <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/Location.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="btnLogOut" alignment="CENTER_LEFT" onAction="#handleLogOutAction" prefHeight="50.0" prefWidth="120.0" styleClass="nav-button" text="Log Out">
                    <graphic>
                        <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/LogOut.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            
            </HBox>
        </HBox>

        <!-- Content Area -->
        <VBox layoutY="83.0" spacing="10.0" style="-fx-padding: 10;">
            <!-- Buttons for Destinations -->
            <HBox alignment="CENTER" spacing="10.0" />
        </VBox>
          <Button fx:id="btnPramuka" layoutX="14.0" layoutY="271.0" mnemonicParsing="false" onAction="#handlePramukaAction" prefHeight="200.0" prefWidth="215.0" styleClass="btnPramuka" stylesheets="@../css/style.css" />
          <Button fx:id="btnSepa" layoutX="242.0" layoutY="271.0" mnemonicParsing="false" onAction="#handleSepaAction" prefHeight="200.0" prefWidth="215.0" styleClass="btnSepa" stylesheets="@../css/style.css" />
          <Button fx:id="btnHarapan" layoutX="471.0" layoutY="271.0" mnemonicParsing="false" onAction="#handleHarapanAction" prefHeight="200.0" prefWidth="215.0" styleClass="btnHarapan" stylesheets="@../css/style.css" />
