                            <Label layoutX="20.0" layoutY="140.0" text="Gambar" />
                            <Button layoutX="150.0" layoutY="140.0" onAction="#handleSelectImage" text="Pilih Gambar" />
                            <TextField fx:id="gambarField" editable="false" layoutX="250.0" layoutY="140.0" prefWidth="200.0" />

                            <Button fx:id="btnTambah" layoutX="20.0" layoutY="180.0" onAction="#handleTambahDestinasi" text="Tambah" />
                            <Button fx:id="btnPerbarui" layoutX="100.0" layoutY="180.0" onAction="#handlePerbaruiDestinasi" text="Perbarui" />
