<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="700.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.mycompany.ocxe.Controller.PesanTiketController">
    <children>
        <Label layoutX="20.0" layoutY="20.0" text="Pemesanan Tiket" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        
        <!-- ID Penyelam -->
        <Label layoutX="20.0" layoutY="80.0" text="ID Penyelam:" />
        <TextField fx:id="txtIdPenyelam" layoutX="150.0" layoutY="75.0" prefWidth="200.0" />
        
        <!-- Destinasi -->
        <Label layoutX="20.0" layoutY="130.0" text="Destinasi:" />
        <ComboBox fx:id="cbDestinasi" layoutX="150.0" layoutY="125.0" prefWidth="200.0" />
        
        <!-- Tanggal -->
        <Label layoutX="20.0" layoutY="180.0" text="Tanggal:" />
        <DatePicker fx:id="dateTanggal" layoutX="150.0" layoutY="175.0" prefWidth="200.0" />
        
        <!-- Waktu -->
        <Label layoutX="20.0" layoutY="230.0" text="Sesi Waktu:" />
        <ComboBox fx:id="cbWaktu" layoutX="150.0" layoutY="225.0" prefWidth="200.0" />
        
        <!-- Jumlah Tiket -->
        <Label layoutX="20.0" layoutY="280.0" text="Jumlah Tiket:" />
        <Spinner fx:id="spQuantity" layoutX="150.0" layoutY="275.0" prefWidth="100.0" />
        
        <!-- Tombol Pesan -->
        <Button fx:id="btnPesan" layoutX="150.0" layoutY="340.0" prefWidth="100.0" text="Pesan Tiket" />
        
        <!-- Tombol Kembali -->
        <Button fx:id="btnKembali" layoutX="20.0" layoutY="450.0" prefWidth="100.0" text="Kembali" />

        <!-- Label output -->
        <Label fx:id="lblOutput" layoutX="20.0" layoutY="400.0" textFill="red" />
    </children>
</AnchorPane>
